<h1>Listing daily_opioids</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Order Number</th>
      <th>Type of Opioid</th>
      <th>PRN</th>
      <th>Dose</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_opioids.each do |daily_opioid| %>
      <tr>
        <td><%= daily_opioid.date %></td>
        <td><%= daily_opioid.order_number %></td>
        <td><%= daily_opioid.type_of_opioid %></td>
        <td><%= daily_opioid.PRN %></td>
        <td><%= daily_opioid.dose %></td>
        <td><%= link_to 'Show', [daily_opioid.patient, daily_opioid] %></td>
        <td><%= link_to 'Edit', edit_patient_daily_opioid_path(daily_opioid.patient, daily_opioid) %></td>
        <td><%= link_to 'Destroy', [daily_opioid.patient, daily_opioid], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Daily opioid', new_patient_daily_opioid_path(params[:patient_id]) %>
<hr>
<%= link_to 'Back', patient_path(params[:patient_id]) %>

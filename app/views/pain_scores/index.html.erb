<h1>Listing pain_scores</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Pain Score 1</th>
      <th>Pain Score 2</th>
      <th>Pain Score 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pain_scores.each do |pain_score| %>
      <tr>
        <td><%= pain_score.date %></td>
        <td><%= pain_score.pain_score_1 %></td>
        <td><%= pain_score.pain_score_2 %></td>
        <td><%= pain_score.pain_score_3 %></td>
        <td><%= link_to 'Show', [pain_score.patient, pain_score] %></td>
        <td><%= link_to 'Edit', edit_patient_pain_score_path(pain_score.patient, pain_score) %></td>
        <td><%= link_to 'Destroy', [pain_score.patient, pain_score], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Pain Score', new_patient_pain_score_path(params[:patient_id]) %>
<hr>
<%= link_to 'Back', patient_path(params[:patient_id]) %>
